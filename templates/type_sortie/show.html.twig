{% extends 'base.html.twig' %}

{% block title %}TypeSortie{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="card text-white bg-secondary mb-3 card-profile" style="max-width: 20rem;">
        <div class="card-header"> <h1>Type de sortie <span class="badge">{{ type_sortie.id }}</span></h1></div>
