                <img style="height: 40px;height: 40px"  id="photo_profil" src="{{asset('uploads/iconesSorties/'~ type_sortie.icone)}}" alt="icone type de sortie">
            {% else %}
                <img style="height: 40px;height: 40px;"  id="photo_profil" src="{{asset('uploads/iconesSorties/')}}" alt="icone type de sortie">
            {% endif %} 
            <div class="form-group mt-4">
                <a href="{{ path('type_sortie_edit', {'id': type_sortie.id}) }}" class="btn btn-warning">Modifier</a> 
                {{ include('type_sortie/_delete_form.html.twig') }}
            </div>
        </div>    
    </div>
