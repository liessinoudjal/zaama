{% extends 'main.html.twig' %}

{% block title %}{{parent()}} - {{ sortie.intitule }}{% endblock %}


    {% block side_bar_left %}
{{ render(controller('App\\Controller\\SideBarLeftController::index' )) }}
 
{% endblock side_bar_left %}

{% block content_main %}

    <h1>Sortie</h1>

    <table class="table"  style="text-align: center;">
    {% if ( (isOrganisateur(sortie, app.user) and isSortieModifiable(sortie.id) or is_granted('ROLE_ADMIN') ) ) %}
        <thead>
            <tr>
                <th colspan="2">   <a href="{{path('sortie_edit', { 'id': sortie.id } ) }}" class="btn btn-outline-success">modifier la sortie</a> </th>
            </tr>
        </thead>
    {% endif %}
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sortie.id }}</td>
            </tr>
            <tr>
                <th>Portable</th>
                <td>{{ sortie.portable }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ sortie.photo }}</td>
            </tr>
            <tr>
                <th>OpenTo</th>
                <td>{{ sortie.presentation }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ sortie.intitule }}</td>
            </tr>
            <tr>
                <th>EntreFille</th>
                <td>{{ sortie.entreFille ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>NbPersonneMax</th>
                <td>{{ sortie.nbPersonneMax }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ sortie.statut }}</td>
            </tr>
             <tr>
                <th>date sortie</th>
                <td>{{ sortie.dateSortie| date() }}</td>
            </tr>
        </tbody>
    </table>
<a href="{{ path('sortie_index') }}">back to list</a>

    <a href="{{ path('sortie_edit', {'id': sortie.id}) }}">edit</a>

    {{ include('sortie/_delete_form.html.twig') }}

{% endblock content_main %}

{% block side_bar_right %}
  {{ render(controller('App\\Controller\\SideBarRightController::index' )) }}
{% endblock side_bar_right %}


{% block javascripts %}
     <script src="{{ asset('js/datepicker.js') }}"></script>
{% endblock javascripts %}

    
